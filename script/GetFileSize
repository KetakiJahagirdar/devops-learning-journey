# Pick any file in the current directory (example: the first regular file)
file_name="$(find . -maxdepth 1 -type f -printf '%f\n' | head -n 1)"

# Get its size in bytes with GNU stat
file_size="$(stat -c '%s' -- "$file_name")"

# Print the result
echo "File name: $file_name"
echo "File size: $file_size bytes"
